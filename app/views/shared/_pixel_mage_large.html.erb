<svg viewBox="0 0 32 32" class="w-full h-full" style="image-rendering: pixelated;">
  <!-- Hat -->
  <rect x="10" y="0" width="12" height="2" fill="#6B5B95"/>
  <rect x="8" y="2" width="16" height="2" fill="#6B5B95"/>
  <rect x="6" y="4" width="20" height="2" fill="#2D1B4E"/>

  <!-- Hat decorations -->
  <rect x="12" y="2" width="2" height="2" fill="#FFD700"/> <!-- Star -->
  <rect x="18" y="3" width="1" height="1" fill="#00FFFF"/> <!-- Sparkle -->

  <!-- Face -->
  <rect x="8" y="6" width="16" height="2" fill="#FFE4C4"/>
  <rect x="6" y="8" width="20" height="6" fill="#FFE4C4"/>

  <!-- Eyes -->
  <rect x="10" y="8" width="4" height="4" fill="#0D0D0D"/>
  <rect x="18" y="8" width="4" height="4" fill="#0D0D0D"/>

  <!-- Eye glow (cyan) -->
  <rect x="10" y="8" width="2" height="2" fill="#00FFFF"/>
  <rect x="18" y="8" width="2" height="2" fill="#00FFFF"/>

  <!-- Eye shine -->
  <rect x="11" y="9" width="1" height="1" fill="#FFFFFF"/>
  <rect x="19" y="9" width="1" height="1" fill="#FFFFFF"/>

  <!-- Eyebrows -->
  <rect x="9" y="7" width="5" height="1" fill="#2D1B4E"/>
  <rect x="18" y="7" width="5" height="1" fill="#2D1B4E"/>

  <!-- Beard -->
  <rect x="8" y="14" width="16" height="2" fill="#B0B0B0"/>
  <rect x="10" y="16" width="12" height="2" fill="#B0B0B0"/>
  <rect x="12" y="18" width="8" height="2" fill="#B0B0B0"/>
  <rect x="14" y="20" width="4" height="1" fill="#888888"/>

  <!-- Robe -->
  <rect x="6" y="20" width="20" height="2" fill="#6B5B95"/>
  <rect x="4" y="22" width="24" height="4" fill="#2D1B4E"/>
  <rect x="2" y="26" width="28" height="4" fill="#2D1B4E"/>

  <!-- Robe center line -->
  <rect x="14" y="22" width="4" height="2" fill="#6B5B95"/>
  <rect x="14" y="26" width="4" height="2" fill="#6B5B95"/>

  <!-- Robe stars -->
  <rect x="8" y="24" width="1" height="1" fill="#FFD700"/>
  <rect x="23" y="25" width="1" height="1" fill="#FFD700"/>
  <rect x="6" y="28" width="1" height="1" fill="#00FFFF"/>
  <rect x="25" y="28" width="1" height="1" fill="#FF00FF"/>

  <!-- Staff -->
  <rect x="28" y="12" width="2" height="18" fill="#8B4513"/>
  <rect x="27" y="30" width="4" height="2" fill="#8B4513"/>

  <!-- Staff crystal -->
  <rect x="26" y="6" width="6" height="6" fill="#00FFFF"/>
  <rect x="27" y="7" width="4" height="4" fill="#00FFFF"/>
  <rect x="28" y="4" width="2" height="2" fill="#FF00FF"/>

  <!-- Crystal glow rays -->
  <rect x="25" y="8" width="1" height="2" fill="rgba(0,255,255,0.5)"/>
  <rect x="32" y="8" width="0" height="2" fill="rgba(0,255,255,0.5)"/>
  <rect x="28" y="3" width="2" height="1" fill="rgba(255,0,255,0.5)"/>

  <!-- Hands -->
  <rect x="2" y="22" width="2" height="4" fill="#FFE4C4"/>
  <rect x="28" y="22" width="2" height="4" fill="#FFE4C4"/>
</svg>
