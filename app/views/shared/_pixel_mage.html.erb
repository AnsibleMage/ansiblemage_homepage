<%# Pixel Art Mage Character - 16x16 grid scaled up %>
<svg viewBox="0 0 16 16" class="w-full h-full" style="image-rendering: pixelated;">
  <!-- Hat -->
  <rect x="5" y="0" width="6" height="1" fill="#6B5B95"/>
  <rect x="4" y="1" width="8" height="1" fill="#6B5B95"/>
  <rect x="3" y="2" width="10" height="1" fill="#2D1B4E"/>
  <rect x="6" y="1" width="1" height="1" fill="#FFD700"/> <!-- Star on hat -->

  <!-- Face -->
  <rect x="4" y="3" width="8" height="1" fill="#FFE4C4"/>
  <rect x="3" y="4" width="10" height="3" fill="#FFE4C4"/>

  <!-- Eyes -->
  <rect x="5" y="4" width="2" height="2" fill="#0D0D0D"/>
  <rect x="9" y="4" width="2" height="2" fill="#0D0D0D"/>
  <rect x="5" y="4" width="1" height="1" fill="#00FFFF"/> <!-- Left eye glow -->
  <rect x="9" y="4" width="1" height="1" fill="#00FFFF"/> <!-- Right eye glow -->

  <!-- Beard/Mouth area -->
  <rect x="4" y="7" width="8" height="1" fill="#B0B0B0"/>
  <rect x="5" y="8" width="6" height="1" fill="#B0B0B0"/>
  <rect x="6" y="9" width="4" height="1" fill="#B0B0B0"/>

  <!-- Robe -->
  <rect x="3" y="10" width="10" height="1" fill="#6B5B95"/>
  <rect x="2" y="11" width="12" height="2" fill="#2D1B4E"/>
  <rect x="1" y="13" width="14" height="2" fill="#2D1B4E"/>

  <!-- Robe highlights -->
  <rect x="7" y="11" width="2" height="1" fill="#6B5B95"/>
  <rect x="7" y="13" width="2" height="1" fill="#6B5B95"/>

  <!-- Staff -->
  <rect x="14" y="6" width="1" height="8" fill="#8B4513"/>
  <rect x="13" y="4" width="3" height="2" fill="#00FFFF"/> <!-- Staff crystal -->
  <rect x="14" y="3" width="1" height="1" fill="#FF00FF"/> <!-- Crystal glow -->

  <!-- Hands -->
  <rect x="1" y="11" width="1" height="2" fill="#FFE4C4"/>
  <rect x="14" y="11" width="1" height="2" fill="#FFE4C4"/>
</svg>
