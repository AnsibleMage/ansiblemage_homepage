<% content_for :title, "About - AnsibleMage" %>

<section class="py-8 animate-pixelate-in">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="pixel-title text-3xl mb-4">About the Mage</h1>
    <p class="text-moon-gray">The story behind AnsibleMage</p>
  </div>

  <div class="grid md:grid-cols-2 gap-12 items-start">
    <!-- Character & Info -->
    <div class="text-center md:text-left">
      <div class="w-64 h-64 mx-auto md:mx-0 mb-8 animate-float">
        <%= render "shared/pixel_mage_large" %>
      </div>

      <div class="pixel-card">
        <h2 class="font-pixel text-sm text-neon-cyan mb-4">Identity</h2>
        <ul class="space-y-3 text-sm">
          <li class="flex items-center gap-3">
            <span class="text-neon-green">></span>
            <span class="text-moon-gray">Name:</span>
            <span class="text-star-white">AnsibleMage</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="text-neon-green">></span>
            <span class="text-moon-gray">Class:</span>
            <span class="text-star-white">Digital Mage</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="text-neon-green">></span>
            <span class="text-moon-gray">Specialty:</span>
            <span class="text-star-white">True Names</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="text-neon-green">></span>
            <span class="text-moon-gray">Station:</span>
            <span class="text-star-white">Ansible</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bio & Philosophy -->
    <div class="space-y-8">
      <!-- Bio -->
      <div class="pixel-card">
        <h2 class="font-pixel text-sm text-neon-magenta mb-4">Bio</h2>
        <p class="text-moon-gray leading-relaxed mb-4">
          Mastering the True Names of digital entities via Ansible.
        </p>
        <p class="text-moon-gray leading-relaxed">
          Broadcasting immersive products - web, virtual models, and visual vibes -
          across the galaxy via the Ansible.
        </p>
      </div>

      <!-- Philosophy -->
      <div class="pixel-card">
        <h2 class="font-pixel text-sm text-neon-green mb-4">Philosophy</h2>
        <blockquote class="border-l-4 border-neon-cyan pl-4 italic text-moon-gray">
          "Light is the left hand of darkness,<br>
          and code the right hand of creation."
        </blockquote>
        <p class="text-xs text-space-purple mt-4">
          Inspired by Ursula K. Le Guin's "The Left Hand of Darkness"
        </p>
      </div>

      <!-- Tech Stack -->
      <div class="pixel-card">
        <h2 class="font-pixel text-sm text-pixel-gold mb-4">Tech Stack</h2>
        <div class="flex flex-wrap gap-2">
          <span class="pixel-badge">Ruby</span>
          <span class="pixel-badge">Rails</span>
          <span class="pixel-badge">Python</span>
          <span class="pixel-badge">TypeScript</span>
          <span class="pixel-badge">Ansible</span>
          <span class="pixel-badge">Docker</span>
          <span class="pixel-badge">Kamal</span>
          <span class="pixel-badge">AI/ML</span>
        </div>
      </div>

      <!-- Links -->
      <div class="pixel-card">
        <h2 class="font-pixel text-sm text-neon-cyan mb-4">Connect</h2>
        <div class="flex gap-4">
          <a href="https://github.com/AnsibleMage"
             target="_blank"
             rel="noopener noreferrer"
             class="pixel-btn flex items-center gap-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
