<% content_for :title, "Projects - AnsibleMage" %>

<section class="py-8 animate-pixelate-in">
  <!-- Header -->
  <div class="text-center mb-12">
    <h1 class="pixel-title text-3xl mb-4">Projects</h1>
    <p class="text-moon-gray">Repositories from the Ansible Station</p>
  </div>

  <!-- Repository Grid -->
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @repos.each do |repo| %>
      <a href="<%= repo[:url] %>"
         target="_blank"
         rel="noopener noreferrer"
         class="pixel-card group transition-all hover:scale-105">
        <!-- Repo Header -->
        <div class="flex items-start justify-between mb-4">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-neon-cyan" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <h3 class="font-pixel text-xs text-neon-cyan group-hover:text-neon-magenta transition-colors">
              <%= repo[:name] %>
            </h3>
          </div>

          <svg class="w-4 h-4 text-moon-gray group-hover:text-neon-cyan transition-colors"
               fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </div>

        <!-- Description -->
        <p class="text-moon-gray text-sm leading-relaxed mb-4 line-clamp-3">
          <%= repo[:description] || "No description" %>
        </p>

        <!-- Footer -->
        <div class="flex items-center justify-between pt-4 border-t border-deep-purple">
          <% if repo[:language] %>
            <div class="flex items-center gap-2">
              <span class="w-3 h-3 rounded-full <%= language_color(repo[:language]) %>"></span>
              <span class="text-xs text-moon-gray"><%= repo[:language] %></span>
            </div>
          <% else %>
            <span class="text-xs text-moon-gray">-</span>
          <% end %>

          <div class="flex items-center gap-1 text-moon-gray">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279-7.416-3.967-7.417 3.967 1.481-8.279-6.064-5.828 8.332-1.151z"/>
            </svg>
            <span class="text-xs"><%= repo[:stars] %></span>
          </div>
        </div>
      </a>
    <% end %>
  </div>

  <!-- GitHub Profile Link -->
  <div class="text-center mt-12">
    <a href="https://github.com/AnsibleMage"
       target="_blank"
       rel="noopener noreferrer"
       class="pixel-btn">
      View All on GitHub
    </a>
  </div>
</section>
