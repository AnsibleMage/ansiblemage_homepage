<% content_for :title, "#{@post.title} - AnsibleMage" %>

<article class="py-8 animate-pixelate-in">
  <!-- Back Link -->
  <div class="mb-8">
    <%= link_to posts_path, class: "inline-flex items-center gap-2 text-moon-gray hover:text-neon-cyan transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <span class="font-pixel text-xs">Back to Blog</span>
    <% end %>
  </div>

  <!-- Header -->
  <header class="mb-12 text-center">
    <h1 class="pixel-title text-3xl mb-4">
      <%= @post.title %>
    </h1>

    <div class="flex items-center justify-center gap-6 text-sm text-moon-gray">
      <span class="flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <%= @post.created_at.strftime("%Y.%m.%d") %>
      </span>

      <span class="flex items-center gap-2">
        <svg class="w-4 h-4 text-pixel-heart" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        <%= @post.likes_count %> likes
      </span>
    </div>
  </header>

  <!-- Content -->
  <div class="pixel-card mb-12">
    <div class="prose prose-invert prose-lg max-w-none markdown-content">
      <%= markdown(@post.content) %>
    </div>
  </div>

  <!-- Like Button -->
  <div class="flex items-center justify-center gap-4 mb-12">
    <%= render "posts/like_button", post: @post, liked: @liked %>
    <%= render "posts/like_count", post: @post %>
  </div>

  <!-- Comments Section -->
  <section id="comments" class="border-t-4 border-deep-purple pt-12">
    <h2 class="pixel-title text-xl mb-8">
      Comments (<%= @post.comments.count %>)
    </h2>

    <!-- Comment Form (top) -->
    <div class="mb-8">
      <% if current_user %>
        <div id="new_comment">
          <%= render "comments/form", post: @post %>
        </div>
      <% else %>
        <div class="pixel-card text-center">
          <p class="text-moon-gray mb-4">
            Login with GitHub to leave a comment
          </p>
          <%= button_to "/auth/github", method: :post, class: "pixel-btn inline-flex items-center gap-2 cursor-pointer", data: { turbo: false } do %>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Login with GitHub
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Comments List -->
    <div id="comments-list">
      <% if @comments&.any? %>
        <% @comments.each do |comment| %>
          <%= render "comments/comment", comment: comment %>
        <% end %>
      <% else %>
        <div id="comments-empty">
          <p class="text-moon-gray text-center py-8">
            No comments yet. Be the first to share your thoughts!
          </p>
        </div>
      <% end %>
    </div>
  </section>
</article>

<style>
  .markdown-content h1,
  .markdown-content h2,
  .markdown-content h3 {
    font-family: var(--font-pixel);
    color: var(--color-neon-cyan);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .markdown-content h1 { font-size: 1.5rem; }
  .markdown-content h2 { font-size: 1.25rem; }
  .markdown-content h3 { font-size: 1rem; }

  .markdown-content p {
    color: var(--color-moon-gray);
    margin-bottom: 1rem;
    line-height: 1.8;
  }

  .markdown-content a {
    color: var(--color-neon-cyan);
    text-decoration: underline;
  }

  .markdown-content a:hover {
    color: var(--color-neon-magenta);
  }

  .markdown-content ul,
  .markdown-content ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-moon-gray);
  }

  .markdown-content li {
    margin-bottom: 0.5rem;
  }

  .markdown-content blockquote {
    border-left: 4px solid var(--color-neon-cyan);
    padding-left: 1rem;
    margin: 1rem 0;
    color: var(--color-moon-gray);
    font-style: italic;
  }

  .pixel-code {
    background: var(--color-void-black);
    border: 2px solid var(--color-deep-purple);
    padding: 1rem;
    margin: 1rem 0;
    overflow-x: auto;
    font-family: monospace;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .markdown-content code:not(.highlight) {
    background: var(--color-deep-purple);
    padding: 0.125rem 0.375rem;
    border-radius: 0;
    font-family: monospace;
    color: var(--color-neon-green);
  }

  .markdown-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
  }

  .markdown-content th,
  .markdown-content td {
    border: 2px solid var(--color-deep-purple);
    padding: 0.5rem 1rem;
    text-align: left;
  }

  .markdown-content th {
    background: var(--color-deep-purple);
    color: var(--color-neon-cyan);
    font-family: var(--font-pixel);
    font-size: 0.75rem;
  }
</style>
