<%= link_to post_path(post.slug), class: "pixel-card block group" do %>
  <!-- Title -->
  <h3 class="font-pixel text-sm text-neon-cyan group-hover:text-neon-magenta transition-colors mb-3">
    <%= post.title %>
  </h3>

  <!-- Excerpt -->
  <p class="text-moon-gray text-sm leading-relaxed mb-4 line-clamp-3">
    <%= post.excerpt %>
  </p>

  <!-- Footer -->
  <div class="flex items-center justify-between pt-4 border-t border-deep-purple">
    <span class="text-xs text-space-purple">
      <%= post.created_at.strftime("%Y.%m.%d") %>
    </span>

    <div class="flex items-center gap-1 text-moon-gray">
      <svg class="w-4 h-4 text-pixel-heart" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
      </svg>
      <span class="text-xs"><%= post.likes_count %></span>
    </div>
  </div>
<% end %>
